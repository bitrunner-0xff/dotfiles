// -*- mode: jsonc -*-
[
    // MAIN MONITOR
    {
        "name": "main",
        "output": ["HDMI-A-1"],
        "layer": "top",
        "position": "top",
        "height": 36, 
        "spacing": 4, 
        "margin": "0",
        "exclusive": true,
        "ipc": false,
        "modules-left": [
            "custom/logo",
            "cpu",
            "temperature",
            "memory",
            "disk",
        ],
        "modules-center": [
            "hyprland/workspaces"
        ],
        "modules-right": [
            "tray",
            "hyprland/language",
            "bluetooth",
            "custom/vpn",
            "network",
            "backlight",
            "wireplumber",
            "battery",
            "clock"
        ],


        // LEFT

        "custom/logo": {
            "format": "󰣇",
            "tooltip": false,
            "menu": "on-click",
            "menu-file": "~/.config/waybar/power_menu.xml",
            "menu-actions": {
                "shutdown": "systemctl poweroff",
                "reboot": "systemctl reboot"
            }
        },
        "cpu": {
            "interval": 1,
            "format": " {icon0}{icon1}{icon2}{icon3}{icon4}{icon5}{icon6}{icon7}{icon8}{icon9}{icon10}{icon11}{icon12}{icon13}{icon14}{icon15}{icon16}{icon17}{icon18}{icon19}",
            "format-icons": ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█"],
            "on-click": "kitty -e htop --sort-key PERCENT_CPU",
            "tooltip": false
        },
        "memory": {
            "interval": 1,
            "format": " {used:0.1f}G/{total:0.1f}G",
            "tooltip-format": "Memory"
        },
        "disk": {
            "interval": 1,
            "format": "󰋊 {specific_used:0.0f}G/{specific_total:0.0f}G",
            "unit": "GiB"
        },
        "temperature": {
            "interval": 1,
            "hwmon-path": "/sys/class/hwmon/hwmon6/temp1_input",
            "critical-threshold": 80,
            "format": "{icon} {temperatureC}°C",
            "format-icons": ["", "", ""]
        },


        // CENTER

        "hyprland/workspaces": {
            "active-only": false,
            "all-outputs": true,
            "format": "{name}",
            "on-click": "activate"
        },

        // RIGHT

        "tray": {
            "icon-size": 15,
            "spacing": 5
        },
        "hyprland/language": {
            "format": " {shortDescription} ",
        },
        "backlight": {
            "format": "{icon} {percent}%",
            "format-icons": ["󱩎", "󱩑", "󱩔", "󰛨"]
        },
        "battery": {
            "states": {
                "good": 95,
                "warning": 20,
                "critical": 10

            },
            "format": "{icon} {capacity}%",
            "format-full": "{icon} {capacity}%",
            "format-charging": "󰂄 {capacity}%",
            "format-plugged": " {capacity}%",
            "format-icons": ["󰂎", "󱊡", "󱊢", "󱊣"],
            "interval": 1
        },
        "network": {
            "format-wifi": " ",
            "format-ethernet": "  {ipaddr}/{cidr}",
            "format-linked": "  {ifname} (No IP)",
            "format-disconnected": "",
            "tooltip": true,
            "tooltip-format-wifi": "  {ifname} - {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\n {bandwidthUpBits}  {bandwidthDownBits}",
            "tooltip-format-ethernet": "  {ifname} - {ipaddr}\nIP: {ipaddr}\n {bandwidthUpBits}  {bandwidthDownBits}",
            "on-click": "kitty -e impala",
            "interval": 1
        },
        "custom/vpn": {
            "interval": 1,
            "exec": "~/.config/waybar/vpn_status.sh",
            "return-type": "json",
            "format": "{} "
        },
        "wireplumber": {
            "format": "{icon} {volume}%",
            "format-muted": "  ",
            "format-icons": ["", "", ""],
            "tooltip": true,
            "scrollstep": 1.0,
            "max-volume": 100.0,
            "tooltip": "Source: {node_name}\n{format_source}"
        },
        "bluetooth": {
            "format": "󰂯",
            "format-disabled": "󰂲",
            "format-connected": "󰂯 {num_connections}",
            "tooltip-format": "{controller_alias}\t{controller_address}\n{num_connections} dev",
            "tooltip-format-connected": "{controller_alias}\t{controller_address}\n{num_connections} connected\n{device_enumerate}",
            "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
            "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
            "on-click": "kitty -e 'bluetui'"
        },
        "clock": {
            "interval": 1,
            "format": " {:%H:%M:%S}",
            "tooltip-format": "<tt><small><span size='12pt'>{calendar}</span></small></tt>",
            "calendar": {
                "mode": "month",
                "mode-mon-col": 3,
                "weeks-pos": "left",
                "on-scroll": 1,
                "format": {
                    "months": "<span color='#ffead3'><b>{}</b></span>",
                    "days": "<span color='#ecc6d9'><b>{}</b></span>",
                    "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                    "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                    "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
                }
            }
        },
    },

    // SECOND MONITOR
    {
        "name": "second",
        "output": ["eDP-1"],
        "layer": "top",
        "position": "top",
        "modules-left": ["hyprland/workspaces"],
        "modules-center": [],
        "modules-right": ["clock"],
        "hyprland/workspaces": {
            "active-only": false,
            "sort-by": "id",
            "format": "{name}"
        },
        "clock": {
            "interval": 1,
            "format": " {:%H:%M:%S   %d.%m.%Y}"
        }
    }
]
